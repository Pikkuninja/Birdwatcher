<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/card_padding">

        <TextView
            style="@style/TextAppearance.AppCompat.Title"
            android:id="@+id/sighting_listitem_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/card_text_margin"
            android:layout_toStartOf="@+id/sighting_listitem_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Albatross" />

        <TextView
            style="@style/TextAppearance.AppCompat.Body1"
            android:id="@+id/sighting_listitem_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/card_text_margin"
            android:layout_toStartOf="@+id/sighting_listitem_image"
            android:layout_alignParentStart="true"
            android:layout_below="@id/sighting_listitem_title"
            android:maxLines="1"
            tools:text="2019-04-24T19:27:16Z" />

        <TextView
            android:id="@+id/sighting_listitem_rarity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/card_text_margin"
            android:layout_alignStart="@id/sighting_listitem_datetime"
            android:layout_below="@id/sighting_listitem_datetime"
            android:textStyle="italic"
            android:maxLines="1"
            tools:text="Extremely rare" />

        <TextView
            android:id="@+id/sighting_listitem_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/card_text_margin"
            android:layout_marginTop="@dimen/card_text_margin"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/sighting_listitem_image"
            android:layout_toStartOf="@+id/sighting_listitem_image"
            android:layout_below="@id/sighting_listitem_rarity"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="@tools:sample/lorem/random" />
        <ImageView
            android:id="@+id/sighting_listitem_image"
            android:layout_width="@dimen/sighting_listitem_image_width"
            android:layout_height="@dimen/sighting_listitem_image_height"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            tools:src="@tools:sample/avatars" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>